{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "types": [
      "node",
      "jest",
      "jquery"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "noUnusedParameters": false
  },
  "include": [
    "src",
    "test",
    "types"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
